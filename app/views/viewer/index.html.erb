<h1 class="page-title">The Brickcaster Network</h1>

<% @podcasts.each do |podcast| %>
  <div class="podcast-teaser">
    <img src="<%= podcast.art_url %>" />    
    <strong><%= link_to podcast.title, '/' + podcast.shortname %></strong><br />
    <%= podcast.body %><br /><br />
    <%= link_to 'Show', podcast %>
  </div>
<% end %>

