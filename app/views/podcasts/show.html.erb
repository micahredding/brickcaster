<h1 class="podcast-name">
  <%= @podcast.title %>
</h1>

<div class="podcast-sidebar">
  <img src="<%= @podcast.art_url %>" /><br />
  <%= raw(BlueCloth.new(@podcast.links).to_html) %>
  <%= link_to 'RSS', "#{podcast_path(@podcast)}.rss" %>
</div>

<div class="podcast-body">
  <%= @podcast.body %>
</div>

<div class="podcast-episodes">
  <%= render 'episodes' %>
</div>

<%= link_to 'Edit', edit_podcast_path(@podcast) %> |
<%= link_to 'Back', podcasts_path %>