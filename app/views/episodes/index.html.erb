<h1>Listing episodes</h1>

<table>
  <tr>
    <th>#</th>
    <th>Title</th>
    <th>Body</th>
    <th>Media url</th>
    <th>Podcast</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @episodes.each do |episode| %>
  <tr>
    <td><%= episode.episode_number %></td>
    <td><%= episode.title %></td>
    <td><%= episode.body %></td>
    <td><%= episode.media_url %></td>
    <td><%= episode.podcast.title %></td>
    <% if admin_signed_in? %>    
    <td><%= link_to 'Show', episode %></td>
    <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
    <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if admin_signed_in? %>    
    <%= link_to 'New Episode', new_episode_path %>
<% end %>
